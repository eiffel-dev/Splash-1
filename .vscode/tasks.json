{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "npm",
            "script": "start",
            "path": "backend/",
            "problemMatcher": []
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "start",
            "path": "frontend/",
            "options": {
                "env": {
                    "PORT": "3001",
                    "NODE_OPTIONS": "--openssl-legacy-provider"
                }
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Starting the development server",
                        "endsPattern": "^Compiled successfully|^Compiled with warnings|^Failed to compile"
                    }
                }
            ]
        },
        {
            "label": "Start Full Stack",
            "dependsOn": ["Start Backend", "Start Frontend"],
            "problemMatcher": []
        }
    ]
}